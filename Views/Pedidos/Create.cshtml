@model RestauranteAPP_TP3.Models.Pedido
@{
    ViewData["Title"] = "Novo Pedido";
    var cardapio = (List<RestauranteAPP_TP3.Models.Produtos>)ViewBag.Cardapio;
}

<h2>Novo Pedido</h2>
<hr />

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Itens do Cardápio</label>
        <div>
            @foreach (var item in cardapio)
            {
                <div class="d-flex align-items-center mb-2">
                    <input type="checkbox" name="CardapioItemIds" value="@item.Id" class="form-check-input" id="chk_@item.Id" />
                    <label for="chk_@item.Id" class="ml-2">
                        @item.Nome - @item.PrecoBase.ToString("C")
                    </label>

                    <input type="number" name="Quantidades[@item.Id]" value="1" min="1" class="form-control ml-3" style="width:80px;" />
                </div>
            }
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Pedido</button>
</form>

<a asp-action="Index" class="btn btn-secondary mt-3">Voltar</a>

@model IEnumerable<RestauranteAPP_TP3.Models.Pedido>

@{
    ViewData["Title"] = "Lista de Pedidos";
}

<h2>Lista de Pedidos</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Cliente</th>
            <th>Itens</th>
            <th>Valor Total</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model)
        {
            <tr>
                <td>@pedido.Data</td>
                <td>@pedido.Usuario?.Nome</td>
                <td>
                    <ul>
                        @foreach (var pi in pedido.PedidoItens)
                        {
                            <li>@pi.Produtos?.Nome (Qtd: @pi.Quantidade)</li>
                        }
                    </ul>
                </td>
                <td>@pedido.ValorTotal.ToString("C")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@pedido.Id" class="btn btn-sm btn-primary">Editar</a>
                    <form asp-action="Delete" asp-route-id="@pedido.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Confirma exclusão deste pedido?');">Excluir</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Novo Pedido</a>

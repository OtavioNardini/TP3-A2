@model IEnumerable<RestauranteAPP_TP3.Models.Produtos>

@{
    ViewData["Title"] = "Produtos";
}

<style>
    :root {
        --background-start: #ffffff;
        --background-end: #1a1a2e;
        --primary: #6366f1;
        --primary-hover: #4f46e5;
        --text-light: #f8fafc;
        --text-dark: #0f172a;
        --text-muted: #94a3b8;
        --card-bg: rgba(255, 255, 255, 0.06);
        --card-border: rgba(255, 255, 255, 0.1);
        --success: #10b981;
        --danger: #ef4444;
        --warning: #f59e0b;
    }

    .page-wrapper {
        min-height: 100vh;
        background: linear-gradient(180deg, var(--background-start) 0%, #e2e8f0 20%, #475569 60%, var(--background-end) 100%);
        padding: 2rem;
        margin: -1rem -15px;
    }

    .page-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
            align-items: center;
        justify-content: space-between;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }

    .page-header h1 {
        margin: 0;
        font-size: 1.75rem;
        color: #0f172a;
    }

    .btn-manage-roles {
        background: #ef4444;
        color: white;
        padding: 0.5rem 0.75rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        margin-right: 0.5rem;
    }

    .btn-create {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: #fff;
        padding: 0.6rem 0.9rem;
        border-radius: 10px;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        font-weight: 700;
    }

    .table-container {
        background: rgba(255,255,255,0.03);
        border-radius: 12px;
        padding: 1rem;
        border: 1px solid rgba(0,0,0,0.06);
    }

    .products-table {
        width: 100%;
        border-collapse: collapse;
    }

    .products-table th, .products-table td {
        padding: 0.75rem 0.5rem;
        text-align: left;
        border-bottom: 1px solid rgba(0,0,0,0.04);
    }

    .product-name {
        font-weight: 600;
        color: #0f172a;
    }

    .product-desc {
        color: #374151;
    }

    .product-price {
        font-weight: 700;
        color: #059669;
    }

    .actions-cell {
        display: flex;
        gap: 0.5rem;
        align-items: center;
    }

    .btn-action {
        padding: 0.4rem 0.6rem;
        border-radius: 8px;
        text-decoration: none;
        color: inherit;
        font-weight: 600;
    }

    .btn-edit {
        background: #fbbf24;
        color: #0f172a;
    }

    .btn-delete {
        background: #ef4444;
        color: white;
    }

    .empty-state {
        text-align: center;
        padding: 2rem;
        color: #6b7280;
    }

    .empty-state .btn-create {
        margin-top: 1rem;
    }

    .text-muted {
        color: #9ca3af;
        font-weight: 600;
    }

    @@media (max-width: 768px) {
        .page-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 1rem;
        }

        .stats-bar {
            flex-wrap: wrap;
        }

        .products-table th,
        .products-table td {
            padding: 1rem;
        }

        .product-desc {
            max-width: 150px;
        }

        .actions-cell {
            flex-direction: column;
        }
    }
</style>

<div class="page-wrapper">
    <div class="page-container">
        <!-- Header -->
        <div class="page-header">
            <h1>Produtos</h1>

            <div>
                @* Link para gerenciamento de roles (visível apenas para Admin) *@
                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Roles" asp-action="Index" class="btn-manage-roles">Gerenciar Roles</a>
                }

                @* Mostrar "Novo Produto" apenas para Fornecedor ou Admin *@
                @if (User.IsInRole("Fornecedor") || User.IsInRole("Admin"))
                {
                    <a asp-action="Create" class="btn-create">
                        <span>+</span> Novo Produto
                    </a>
                }
            </div>
        </div>

        <!-- Stats -->
        <div class="stats-bar">
            <div class="stat-badge">
                <span class="stat-badge-icon">📊</span>
                <div class="stat-badge-info">
                    <span class="stat-badge-value">@Model.Count()</span>
                    <span class="stat-badge-label">Total de Produtos</span>
                </div>
            </div>
            <div class="stat-badge">
                <span class="stat-badge-icon">✅</span>
                <div class="stat-badge-info">
                    <span class="stat-badge-value">@Model.Count()</span>
                    <span class="stat-badge-label">Ativos</span>
                </div>
            </div>
        </div>

        <!-- Search -->
        <div class="search-bar">
            <input type="text" class="search-input" placeholder="🔍 Buscar produtos..." id="searchInput" />
        </div>

        <!-- Table -->
        <div class="table-container">
            @if (Model != null && Model.Any())
            {
                <table class="products-table">
                    <thead>
                        <tr>
                            <th>Nome do Produto</th>
                            <th>Descrição</th>
                            <th>Preço Base</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="productsBody">
                        @foreach (var item in Model)
                        {
                            <tr class="product-row">
                                <td>
                                    <span class="product-name">@item.Nome</span>
                                </td>
                                <td>
                                    <span class="product-desc">@(string.IsNullOrEmpty(item.Descricao) ? "Sem descrição" : item.Descricao)</span>
                                </td>
                                <td>
                                    <span class="product-price">R$ @item.PrecoBase.ToString("F2")</span>
                                </td>
                                <td>
                                    <div class="actions-cell">
                                        @* Edit/Delete visíveis somente para Fornecedor ou Admin *@
                                        @if (User.IsInRole("Fornecedor") || User.IsInRole("Admin"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit" title="Editar">
                                                ✏️ Editar
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete" title="Excluir">
                                                🗑️ Excluir
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sem permissão</span>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">📭</div>
                    <p class="empty-state-text">Nenhum produto cadastrado ainda.</p>
                    @if (User.IsInRole("Fornecedor") || User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" class="btn-create">+ Cadastrar Primeiro Produto</a>
                    }
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('.product-row');

            rows.forEach(row => {
                const name = row.querySelector('.product-name').textContent.toLowerCase();
                const desc = row.querySelector('.product-desc').textContent.toLowerCase();

                if (name.includes(searchTerm) || desc.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
    </script>
}

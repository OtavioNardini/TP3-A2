@model RestauranteAPP_TP3.Models.Reserva

@{
    ViewData["Title"] = "Nova Reserva";
    var mesas = (List<RestauranteAPP_TP3.Models.Mesa>)ViewBag.Mesas;
}

<div class="container mt-4">
    <h2 class="text-center">📅 Nova Reserva</h2>
    <p class="text-muted text-center">Selecione uma mesa e escolha o horário para sua reserva.</p>
    <hr />

    <form asp-action="Create" method="post" class="card shadow-sm p-4">
        <div class="form-group mb-3">
            <label for="mesaId" class="form-label fw-bold">Numero de Pessoas:</label>
            <input asp-for="Mesa" class="form-control" />
               
        </div>

        <div class="form-group mb-3">
            <label for="dataHora" class="form-label fw-bold">Data e Hora:</label>
            <input type="datetime-local" id="dataHora" name="dataHora" class="form-control" required />
            <small class="form-text text-muted">Horário permitido: 19h00 - 22h00</small>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">← Voltar</a>
            <button type="submit" class="btn btn-primary">✅ Confirmar Reserva</button>
        </div>
    </form>
</div>
